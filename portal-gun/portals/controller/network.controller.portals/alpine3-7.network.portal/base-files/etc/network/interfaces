#=============================================================================
#= Multiverse OS: Router Controller                                         ==
#=============================================================================
auto lo
iface lo inet loopback
#=============================================================================
# LAN SUBNET       (192.168.0.x)
#-----------------------------------------------------------------------------
auto eth3
iface eth3 inet dhcp
	hostname host
#=============================================================================
# Multiverse Router Subnets
#=============================================================================
# UNIVERSE SUBNET  (10.0.0.x)
#-----------------------------------------------------------------------------
#auto eth0
#iface eth0 inet dhcp
