#-----------------------------------------------------------------------------
# GALAXY SUBNET   (10.1.1.x)
#-----------------------------------------------------------------------------
auto eth1
#iface eth1 inet dhcp
iface eth1 inet static
	address 10.1.1.10
	netmask 255.255.255.0
	gateway 10.1.1.1
	up route del -net default gw 10.1.1.1 netmask 0.0.0.0
#-----------------------------------------------------------------------------
# STAR SUBNET     (10.2.2.x)
#-----------------------------------------------------------------------------
